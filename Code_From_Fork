pipeline
{
agent any 
stages
{
 stage('scm checkout')
{ steps {git branch: 'main', url: 'https://github.com/tusharmanep/MevanRepo.git'}}


 stage('code compile')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn compile'
 } }}

  stage('execute unit test framework')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn test'
 } }}

   stage('code build')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn package'
 } }}
 stage('deploy to tomcat server-Dev-Automated')
  {steps { sshagent(['deploytotomcat'])}
          {
	   sh 'scp -rp webapp/target/webapp.war ec2-user@172.31.46.83:/usr/share/tomcat/webapps/'

	  }} 
}
}
